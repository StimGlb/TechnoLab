{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "outDir": "dist"
  },
  "include": ["src/**/*", "*.ts", "*.js"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}